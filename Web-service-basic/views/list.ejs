    <h4 class="ml-2 my-3">서버에서 가져온 할일 리스트</h4>

    <ul class="list-group">
      <% for (var i=0; i<posts.length; i++) { %>
      <li class="list-group-item">
        <div>글번호: <%= posts[i]._id%></div>
        <div>할일 제목: <%= posts[i].title %></div>
        <div>할일 마감날짜 : <%= posts[i].date %></div>
        <button class="delete" data-id="<%= posts[i]._id%>">삭제</button>
      </li>
      <% } %>
    </ul>
    <!-- Delete 요청을 위해서는 method-override 라이브러리를 이용하거나 Ajax 사용 -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script>

      $('.delete').click(function(e){  // class가 delete인 요소를 클릭하면 내부코드 실행
        var 글번호 = e.target.dataset.id; // e.target: 내가 누른 요소, dataset.id: data-id 속성의 값
        // console.log(글번호);

        $.ajax({  // <- jquery를 이용한 ajax. (생 javascript로도 가능)
        method : 'DELETE',
        url : '/delete',
        data : {_id : 글번호}
        }).done(function(result){  // ajax 요청이 성공했을때
        
        });  
      })
    </script>

